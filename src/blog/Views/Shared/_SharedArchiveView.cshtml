@model IEnumerable<PostArchiveViewModel>
@inject IOptions<LaobianBlogOption> _option

<div>
    <div class="mb-4">
        @foreach (var item in Model)
        {
            <a class="btn btn-light mb-2 me-2" href="#@item.Link">
                @item.Name <span class="badge bg-info">@item.Count</span>
            </a>
        }
    </div>

    <div class="archive">
        @foreach (var item in Model)
        {
            <div class="mb-4">
                <h2 id="@item.Link" class="mt-3 mb-3 pb-1 border-bottom">
                    <span>@item.Name (@item.Posts.Count)</span>
                </h2>
                @foreach (var post in item.Posts)
                {
                    <div class="mt-2 mb-3">
                        <p class="text-muted fs-sm mb-0">@post.Raw.PublishTime.ToChinaDate()</p>
                        <h4>
                            <a href="@post.Raw.GetFullPath(_option.Value.BlogRemoteEndpoint)" class="text-decoration-none">
                                <span>@post.Raw.Title</span>
                            </a>

                        </h4>
                    </div>
                }
            </div>
        }
    </div>
</div>