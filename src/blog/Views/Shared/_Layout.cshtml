@using Microsoft.Extensions.Options
@inject IOptions<BlogConfig> _config
<!DOCTYPE html>
<html lang="zh" class="w-100 min-vh-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @if (ViewData["Title"] == null)
        {
            <text>Jerry Bian's blog</text>
        }
        else
        {
            <text>@ViewData["Title"] &minus; Jerry Bian's blog</text>
        }
    </title>
    <link rel="stylesheet" href="~/style.css" asp-append-version="true"/>
    <script defer src="~/script.min.js" asp-append-version="true"></script>
</head>
<body class="d-flex flex-column w-100 min-vh-100">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Jerry Bian's blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navLinks" aria-controls="navLinks" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navLinks">
            <ul class="navbar-nav">
                @*<li class="nav-item">
                    <a class="nav-link active" href="#">
                        Home
                        <span class="visually-hidden">(current)</span>
                    </a>
                </li>*@
                <li class="nav-item">
                    <a href="/about" class="nav-link active">关于</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/archive">存档</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">

                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/JerryBian">GitHub <i class="fas fa-external-link-alt"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/rss">RSS</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container py-3">
    <div class="row gx-4">
        <main class="col-9 d-flex justify-content-center px-2 py-3 @*shadow-sm rounded*@">
            <div class="wrapper-content">
                @RenderBody()
            </div>
        </main>
        <aside class="col-3 d-none d-lg-block">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Welcome!</h5>
                    <div class="card-text fs-sm">
                        <p>卞良忠，英文名：Jerry Bian，一个普通人。</p>
                        <p>这里是我的个人博客，想到什么就写什么。</p>
                    </div>
                    <div class="d-grid">
                        <a href="#" class="btn btn-light">关于 &rarr;</a>
                    </div>
                </div>
            </div>
            <div class="position-sticky" style="top: 10px;">
                @await RenderSectionAsync("Aside", false)
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">关于转载以及声明</h5>
                        <div class="card-text fs-sm">
                            <p>这里是我的个人博客，所有文章均为个人言论，除非特殊声明，均与我的雇主或者其他任何团体无关。</p>
                            <p>遵守 <a href="https://creativecommons.org/licenses/by-nc-nd/4.0/deed.zh" class="link-dark text-decoration-none">“署名-非商业性使用-禁止演绎 4.0 国际(CC BY-NC-ND 4.0)</a> 协议。</p>
                        </div>
                    </div>
                </div>
            </div>
            
        </aside>
    </div>

</div>

<footer class="navbar navbar-light bg-light mt-auto">
    <nav class="container justify-content-center text-muted fs-6">
        &copy; @DateTime.Now.Year @_config.Value.AdminChineseName &middot;
        &hearts; &middot;
    </nav>

</footer>

@await RenderSectionAsync("Script", false)
</body>
</html>