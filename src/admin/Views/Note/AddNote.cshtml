@model List<Laobian.Share.Model.Jarvis.NoteTagRuntime>
@{
    ViewData["Title"] = "添加新的笔记";
    Layout = "_NoteLayout";
}

<fieldset>
    <legend>添加新的笔记</legend>
    <form class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">标题</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="笔记标题" autocomplete="off" autofocus required>
            <div class="invalid-feedback">
                必填
            </div>
        </div>
        <div class="mb-3">
            <label for="mdContent" class="form-label">正文</label>
            <textarea class="form-control" id="mdContent" name="mdContent" rows="3" placeholder="笔记正文" autocomplete="off" required></textarea>
            <div class="invalid-feedback">
                必填
            </div>
        </div>
        @if (Model.Any())
        {
            <div class="mb-3">
                <label class="form-label">标签</label>
                <div id="tagsDiv">
                    @foreach (var tag in Model)
                    {
                        var id = Guid.NewGuid().ToString("N");
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="@id" value="@tag.Raw.Id" name="tags">
                            <label class="form-check-label" for="@id">@tag.Raw.DisplayName</label>
                        </div>
                    }
                </div>
            </div>
        }
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">提交</button>
        </div>

    </form>
</fieldset>


@section Scripts {
    <script>
        activeNavItem("#nav_note_post");
        const markdownContent = prepareEditor(document.querySelector("#mdContent"), "note_add_@DateTime.Now.ToDate()");
        const form = document.querySelector("form");
        form.addEventListener('submit',
            function(event) {
                event.preventDefault();
                event.stopPropagation();
                submitRequest("/note/post", { form: form, body: new URLSearchParams(new FormData(form)), contentType: "application/x-www-form-urlencoded" });
            });
    </script>
}