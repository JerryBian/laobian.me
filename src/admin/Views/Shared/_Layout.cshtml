<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-2 h-100 bg-dark d-flex flex-column p-3 text-white">
            <a href="/" class="fs-4 text-decoration-none mb-3 me-auto text-white">Admin</a>
            <hr />
            <ul class="nav flex-column mb-auto">
                <li>
                    <a href="/blog/posts" class="nav-link text-white">Blog > Posts</a>
                </li>
                <li>
                    <a href="/blog/tags" class="nav-link text-white">Blog > Tags</a>
                </li>
                <li>
                    <a href="/blog/comments" class="nav-link text-white">Blog > Comments</a>
                </li>
            </ul>
            <hr />
            <a href="/logout" class="fs-6 text-decoration-none mb-3 me-auto ms-auto text-white">Sign out</a>
        </div>
        <div class="col-10 p-2">
            <p class="text-end">
                <button class="btn btn-info" onclick="forceReloadBlogData()">Force Reload Blog Data</button>
                <button class="btn btn-info" onclick="persistent()">Persistent</button>
            </p>
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
        function forceReloadBlogData() {
            fetch('/blog/reload',
                {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'text/plain'
                    },
                    body: 'Request by Admin - Force Reload Blog Data button'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload(true);
                    }
                });
    }

        function persistent() {
            fetch('/blog/persistent',
                    {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'text/plain'
                        },
                        body: 'Request by Admin - Persistent'
                    })
                .then(response => {
                    if (response.ok) {
                        window.location.reload(true);
                    }
                });
        }
    </script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>