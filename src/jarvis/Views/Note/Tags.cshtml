@model List<NoteTagRuntime>

@{
    Layout = "_NoteLayout";
    ViewData["Title"] = "所有笔记标签";
}

<div class="container">
    <div class="row row-cols-2">
        @foreach (var tag in Model)
        {
            <div class="col d-grid mb-3">
                <a class="btn btn-outline-primary" href="/note/tag/@tag.Raw.Link">
                    @tag.Raw.DisplayName
                    <span class="badge bg-secondary">@tag.Notes.Count</span>
                </a>
            </div>
        }
    </div>
</div>
