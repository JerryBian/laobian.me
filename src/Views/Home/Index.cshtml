@inject IOptions<SwanOption> _option
@{
    Layout = null;
    ViewData["BrandName"] = $"{_option.Value.Title}";
    ViewData["BrandLink"] = "/";
    ViewData["Description"] = $"{_option.Value.Title}";
}

<!DOCTYPE html>
<html lang="zh">
<head>
    <title>@_option.Value.Title</title>
    <link href="~/style.min.css" rel="stylesheet" asp-append-version="true" />
    </head>
    <body>
    <div class="d-flex min-vh-100 w-100 flex-column justify-content-center align-items-center">
        <div class="text-center">
            <img class="d-block mx-auto mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
            <h1 class="display-5 fw-bold">@_option.Value.Title</h1>
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Primary button</button>
                    <button type="button" class="btn btn-outline-info btn-lg px-4">Secondary</button>
                </div>
            </div>
        </div>
    </div>
    </body>
    </html>

