@inject ISwanService _swanService
@model BlogPost
@{
    Layout = "_LayoutPublic";
}


<h3 class="mb-2 large-title">@Model.Title</h3>
<div class="small text-muted">
    <i class="bi bi-calendar-check"></i> @Model.PublishDate.ToCnDate()
</div>

<article class="mt-4 mb-2 post">
    @Html.Raw(Model.HtmlContent)
</article>

@section Aside{
    @if(Model.RecommendPostsByTag.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-tags-fill"></i> 推荐文章
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.RecommendPostsByTag)
                {
                    <li class="list-group-item list-group-action">
                        <a href="@item.GetFullLink()">@item.Title</a>
                    </li>
                }
            </ul>
        </div>
    }

    @if (Model.RecommendPostsBySeries.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-bookmarks-fill"></i> 系列文章
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.RecommendPostsBySeries)
                {
                    <li class="list-group-item list-group-action">
                        <a href="@item.GetFullLink()">@item.Title</a>
                    </li>
                }
            </ul>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <i class="bi bi-info-circle-fill"></i> 文章信息
        </div>
        <div class="list-group list-group-flush">
            @if (Model.PreviousPost != null)
            {
                <a href="@Model.PreviousPost.GetFullLink()" class="list-group-item list-group-action">前一篇： @Model.PreviousPost.Title</a>
            }

            @if (Model.NextPost != null)
            {
                <a href="@Model.NextPost.GetFullLink()" class="list-group-item list-group-action">后一篇： @Model.NextPost.Title</a>
            }

            <div class="list-group-item ">最后修改于：@Model.LastUpdatedAt</div>
        </div>
    </div>
}